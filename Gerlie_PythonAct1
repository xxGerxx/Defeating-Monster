        monster_health = 80
        monster = "Cyclops"
        attack = [10,20]
                
    else:
        monster_health = 90
        monster = "Bigfoot"
        attack = [15,25]
            

    hero = int(input("What kind of character would you like to perform?\n Choose from: \n [1] Marksman \n [2] Mage \n [3] Assassin \n Choice:"))
